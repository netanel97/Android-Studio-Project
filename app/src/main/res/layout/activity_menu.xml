<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/road"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="#09B626"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_BTN_playgame"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Play game"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_BTN_top10"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Top 10"
        android:layout_below="@+id/menu_BTN_playgame"
        android:layout_centerHorizontal="true"/>
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/menu_SW_faster"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Fast mode"
        android:shadowColor="#A2C3C7"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/menu_BTN_top10"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/menu_SW_sensor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:shadowColor="#A2C3C7"
        android:text="Sensor"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/menu_SW_faster"
        android:textSize="20sp" />




</RelativeLayout>